@using Dominio
@{
    ViewBag.Title = "Listado de Socios";
}

<h2>Listado de Socios</h2>

@if (ViewBag.listadoSocios != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Cédula</th>
                <th scope="col">Nombre y Apellido</th>
                <th scope="col">Fecha de Nacimiento</th>
                <th scope="col">Fecha de Ingreso</th>
                <th scope="col">Activo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Socio socio in ViewBag.listadoSocios)
            {
            <tr>
                <td>@socio.Cedula</td>
                <td>@socio.Nombre</td>
                <td>@socio.FechaNac.ToString("dd-MM-yyyy")</td>
                <td>@socio.FechaIngreso.ToString("dd-MM-yyyy")</td>
                @if(socio.Activo) { <td>Si</td> } else {<td>No</td> }
                <td>@Html.ActionLink("Ver Detalle", "/DetalleSocio", new { cedula = socio.Cedula })</td>
            </tr>
            }
        </tbody>
    </table>
}